<!-- container section start -->
  <section id="container" class="">
      <!--header start-->
      
      <header class="header dark-bg">
            <div class="toggle-nav">
                <div class="icon-reorder tooltips" data-original-title="Toggle Navigation" data-placement="bottom"></div>
            </div>

            <!--logo start-->
            <a href="index.html" class="logo">GEOTAGME</a>
            <!--logo end-->
            <div class="nav search-row" id="top_menu">
                
                <ul class="nav top-menu">                    
                    <li>
                        <form class="navbar-form">
                            <h3 class="nav pull-left" style="margin-top:0;"><i class="fa fa-file-text"></i> Observers</h3>
                        </form>
                    </li>                    
                </ul>
            </div>

           
            <div class="top-nav notification-row">                
                <!-- notificatoin dropdown start-->
                <ul class="nav pull-right top-menu">
                    
                    <!-- user login dropdown start-->
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            <span class="profile-ava">
                                <img alt="" src="/assets/nice_admin/geotagme.png">
                            </span>
                            <span class="username">
                              <% if session[:role]=='photographer' %>
                              <%= current_user.name  %>
                              <% elsif session[:role]=='observer' %>
                              <%= Observer.find_by_id(session[:user_id]).name %>
                              <% end %>
                            </span>
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu extended logout">
                            <div class="log-arrow-up"></div>
                            
                            <li>
                                <a href="<%= logout_path %>"><i class="icon_key_alt"></i> Log Out</a>
                            </li>
                            
                        </ul>
                    </li>
                    <!-- user login dropdown end -->
                </ul>
                <!-- notificatoin dropdown end-->
            </div>
      </header>      
      <!--header end-->

      <!--sidebar start-->
      <aside>
          <div id="sidebar"  class="nav-collapse ">
              <!-- sidebar menu start-->
              <ul class="sidebar-menu">                
                  <li class="">
                      <a class="" href="/dashboard">
                          <i class="icon_house_alt"></i>
                          <span>Dashboard</span>
                      </a>
                  </li>
                  <li class="sub-menu">
                      <a href="javascript:;" class="">
                          <i class="icon_table"></i>
                          <span>Observers</span>
                          <span class="menu-arrow arrow_carrot-right"></span>
                      </a>
                      <ul class="sub">
                          <li><a class="" href="/observers/new" data-toggle="modal">Create observer</a></li>
                          <li><a class="" href="/observers/index">List</a></li>
                      </ul>
                  </li>       
                  
                  
              </ul>
              <!-- sidebar menu end-->
          </div>
      </aside>
      <!--sidebar end-->

      <!--main content start-->
      <section id="main-content">
        <section class="wrapper">
            
            <div class="row"><!-- page start-->
		            <div class="col-lg-8 col-md-12">
					
					         <section class="panel">
                          <header class="panel-heading">Observers list</header>
                          <div class="panel-body">
                         
                          <table class="table table-striped table-advance table-hover">
                           <tbody>
                              <tr>
                                 <th><i class="icon_profile"></i> Name</th>
                                 <th><i class="icon_mail_alt"></i> Email</th>
                                 <th><i class="icon_calendar"></i> Start permission</th>
                                 <th><i class="icon_calendar"></i> Terminate permission</th>
                                 <th><i class="icon_cogs"></i> Action</th>
                              </tr>
                              <% @observers.each do |observer| %>
                              <tr>
                                 
                                       <td><%= observer.name %></td>
                                       <td><%= observer.email %></td>
                                       <td><%= observer.start_temp_permissions %></td>
                                       <td><%= observer.terminate_temp_permissions %></td>
                                       <td>
                                          <div class="btn-group">
                                              <a class="btn btn-primary" href="#"><i class="icon_plus_alt2"></i></a>
                                              <a class="btn btn-success" href="#"><i class="icon_check_alt2"></i></a>
                                              <a class="btn btn-danger" href="#"><i class="icon_close_alt2"></i></a>
                                          </div>
                                        </td>
                                 
                              </tr>
                              <% end %>
                           </tbody>
                          </table>   
                          </div>    
                     

                    </section>

				        </div>

    				    <div class="col-lg-4 col-md-12">
                  <!-- sin contenido de momento -->
                </div>

			      </div><!-- page end--> 

          </section>
      </section><!--main content end-->


  </section><!-- container section end -->
  
