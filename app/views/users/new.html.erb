<h1>Geotagme Signup!</h1>

<%= form_for [@user], url: users_path do |f| %>

    <% if @user.errors.any? %>
	  <ul>
	    <% @user.errors.full_messages.each do |error_msg| %>
	      <li><%= error_msg %></li>
	    <% end %>
	  </ul>
	<% end %>

	Name: <%= f.text_field :name %><br>
	Email: <%= f.text_field :email %><br>
	Password: <%= f.password_field :password %><br>
	Password Confirmation: 	<%= f.password_field :password_confirmation %><br>
	<%= f.submit "Submit" %>

<% end %>

<a href=<%= dropbox_auth_path %>><h1>DROPBOX CONNECT</h1></a>